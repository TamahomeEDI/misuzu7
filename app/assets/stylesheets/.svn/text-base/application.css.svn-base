	border: 1px solid gray;
	width: 550px;
} 

table.tableindex_m135 thead tr{
	background-color: #b9c9fe;	
}
/* End Add */
table.tableindex2{
	border: 1px solid gray;
	width: 950px;
}
table.tableindex2 thead tr{
	background-color: #b9c9fe;	
}

table.tableindex{
	border: 1px solid gray;
}
table.tableindex thead tr{
	background-color: #b9c9fe;	
}

table.tableindex tbody tr:nth-child(even){
	background: #CCC;
}

table.tableindex tbody tr:nth-child(odd){
	background: #FFF;
}

table.tableindex tbody tr:hover {
	background-color: #d0dafd;
}
